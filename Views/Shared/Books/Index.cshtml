@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = $"Books in Shelf: {ViewBag.ShelfName}";
    Layout = "_Layout"; // Make sure this matches your layout file
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewBag.Title</h2>
        <div>
            <a asp-controller="Shelfes" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Shelves
            </a>
            <a asp-action="AddBook" asp-route-shelfId="@ViewBag.ShelfId" class="btn btn-primary ml-2">
                <i class="fas fa-plus"></i> Add Book
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Book Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>
                                <a asp-controller="Books" asp-action="UpDateBook" asp-route-id="@book.Id" class="btn btn-sm btn-warning">
                                    Edit
                                </a>
                                <a asp-controller="Books" asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No books found in this shelf. Would you like to
            <a asp-action="AddBook" asp-route-shelfId="@ViewBag.ShelfId">add one</a>?
        </div>
    }
</div>
